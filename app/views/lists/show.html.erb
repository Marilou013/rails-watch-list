  <h1><%= @list.name %></h1>
  <% @bookmarks.each do |bookmark| %>
    <%= bookmark.comment %><br>
  <%= image_tag("#{bookmark.movie.poster_url}", alt: "movie poster", class: "w-25") %><br>
  <%= link_to 'Delete', bookmark_path(bookmark),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <% end %><br>
  <%= link_to "Add bookmark" , new_list_bookmark_path(@list) %><br>
  <%= link_to "Back to all lists" , lists_path %> <br>
